
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sistema Bibliotecario UH | Menu Bibliotecario</title>
    <link rel="Icon" href="~/Imagenes/icono.ico">
    <link href="~/Css/style-principal.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header text-white">
                    <img src="~/Imagenes/uhLogo.png" id="logo" />
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>
    <main>
        <!-- section -->
        <section>
            <div class="container-fluid text-center">
                <div class="row content">
                    <div class="col-sm-12">
                        <h6 class="text-white text-center">Seleccione una opción:<br><br></h6>
                    </div>
                </div>
                <div class="row content">
                    <div class="col-sm-5">
                    </div>
                    <div class="col-sm-2 text-center text-white">
                        <div class="form-group">
                            <input type="button" value="Ver Socios" class="btn btn-primary form-control" onclick="@("window.location.href='" + @Url.Action("BibliotecarioSocios", "Home") + "'");" />
                        </div>
                        <div class="form-group">
                            <input type="button" value="Gestionar Libros" class="btn btn-primary form-control" onclick="@("window.location.href='" + @Url.Action("GestionLibros", "Home") + "'");" />
                        </div>
                        <div class="form-group">
                            <input type="button" value="Gestionar Prestamos" class="btn btn-primary form-control" onclick="@("window.location.href='" + @Url.Action("GestionPrestamo", "Home") + "'");" />
                        </div>
                        <div class="form-group">
                            <input type="button" value="Volver a Login" class="btn btn-danger form-control" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
                        </div>
                    </div>
                    <div class="col-sm-5">
                    </div>
                </div>
            </div>
        </section>
        <!-- section -->
    </main>
    <!-- Footer -->
    <footer class="page-footer font-small blue">
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            © 2019 Copyright:
            <a href="https://uh.ac.cr/" target="_blank"> Universidad Hispanoamericana</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
</body>
</html>
